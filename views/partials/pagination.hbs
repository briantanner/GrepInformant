<ul class="pagination">
  {{#paginate pagination type="previous"}}
    <li {{#if disabled}}class="disabled"{{/if}}><a href="{{../baseurl}}/{{n}}" >Prev</a></li>
  {{/paginate}}
  {{#paginate pagination type="middle" limit="7"}}
    <li {{#if active}}class="active"{{/if}}><a href="{{../baseurl}}/{{n}}">{{n}}</a></li>
  {{/paginate}}
  {{#paginate pagination type="next"}}
    <li {{#if disabled}}class="disabled"{{/if}}><a href="{{../baseurl}}/{{n}}">Next</a></li>
  {{/paginate}}
</ul>